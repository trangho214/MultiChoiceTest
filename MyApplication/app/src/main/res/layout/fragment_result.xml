<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="paxcreation.com.multiplechoicequestionstest.fragment.ResultFragment">

    <TextView
        android:id="@+id/txtCandidateName_Result"
        style="@style/Text_Title"
        android:layout_marginBottom="20dp"/>

    <ListView
        android:id="@+id/lvMultiChoice_Result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

   <LinearLayout
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/total"/>

        <TextView
            android:id="@+id/txtSum_Result"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            />
    </LinearLayout>




    <Button
        android:id="@+id/btnOK_Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:layout_gravity="center"
        android:gravity="center"/>
</LinearLayout>
