<?xml version="1.0" encoding="utf-8"?>
<!--used in TestActivity (MultiChoiceAdapter) and Answer Fragment (AnswerAdapter) -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/llo_MultiChoiceElement"
        android:orientation="vertical"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtQuestion_MultiChoiceElement"
            android:textColor="@android:color/holo_blue_light"
            style="@style/tv_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtContent_MultiChoiceElement"
            android:layout_marginLeft="20dp"
            style="@style/tv_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/lloGroupView_MultiChoiceElement"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"></LinearLayout>

        <EditText
            android:id="@+id/edAnswerConstructed_MultiChoiceElement"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="top"
            android:background="@drawable/rectangle"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:id="@+id/lloResult_MultiChoiceElement"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtAnswer_MultiChoiceElement"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/txtPoint_MultiChoiceElement"
            android:gravity="right"
            android:background="@drawable/rectangle"
            android:layout_gravity="right"
            android:layout_margin = "10dp"
            android:inputType="numberDecimal"
            android:layout_width="60dp"
            android:layout_height="40dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
